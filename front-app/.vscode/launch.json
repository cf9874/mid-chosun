{
  "version": "0.2.0",

  "configurations": [
    {
      "name": "nextjs-debug",

      "type": "node-terminal",

      "request": "launch",

      "command": "yarn dev",

      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",

        "uriFormat": "%s",

        "action": "debugWithChrome"
      }
    }
  ]
}
